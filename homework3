#include <iostream>
#include <cmath>

using namespace std;

int main() {
    double a, b, c;
    cout << "Введите сторону a: ";
    cin >> a;
    cout << "Введите сторону b: ";
    cin >> b;
    cout << "Введите сторону c: ";
    cin >> c;

    double p = a + b + c;
    
    double p2 = p / 2;
    double s = sqrt(p2 * (p2 - a) * (p2 - b) * (p2 - c));
    
    cout << "Периметр треугольника: " << p << endl;
    cout << "Площадь треугольника: " << s << endl;
    
    return 0;
}
